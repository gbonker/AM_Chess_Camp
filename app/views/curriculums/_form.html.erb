<%= simple_form_for(@curriculum, html: { class: 'form-horizontal' }) do |f| %>
   
   <h3><%= controller.action_name.capitalize %> Curriculum</h3>
    
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: 6 } %>
    <%= f.input :min_rating, label: "Minimum Rating" %>
    <%= f.input :max_rating, label: "Maximum Rating" %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to List of Curriculums', curriculums_path, :class => 'button secondary radius' %>
    </div>

<% end %>