<%= simple_form_for(@family, html: { class: 'form-horizontal' }) do |f| %>
   
   <h3><%= controller.action_name.capitalize %> Family</h3>
    
    <%= f.input :family_name, label: "Family Name" %>
    <%= f.input :parent_first_name, label: "Parent's First Name" %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to List of Families', families_path, :class => 'button secondary radius' %>
    </div>

<% end %>