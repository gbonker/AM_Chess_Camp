<%= simple_form_for(@registration, html: { class: 'form-horizontal' }) do |f| %>
   
   <h3><%= controller.action_name.capitalize %> Registration</h3>
    
    <%= f.input :student_id, collection: Student.active.alphabetical.map{ |student| [student.name, student.id] }, prompt: "Select Student..." %>
    <%= f.input :camp_id, collection: Camp.active.alphabetical.map{ |camp| ["#{camp.name}: #{camp.start_date.strftime('%B %e, %Y')} at #{camp.location.name}", camp.id] }, prompt: "Select Camp..." %>
    <%= f.input :payment_status, label: "Payment Status", collection: ["deposit", "full"], prompt: "Select Payment Status..." %>
    <%= f.input :points_earned %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
    </div>

<% end %>