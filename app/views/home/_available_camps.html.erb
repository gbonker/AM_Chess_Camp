<div class="panel clearfix">

	<% unless @available_camps.empty? %>

		<h5>Next Available Camps</h5>

		<table class="table">
		  <tr>
		    <th width="260" align="left">Name</th>
		    <th width="120">Start Date</th>
		  </tr>

		<% @available_camps.each do |camp| %>
		  <tr>
		    <td><%= link_to camp.name, camp_path(camp) %></td>
		    <td align="center"><%= camp.start_date.strftime('%m/%d/%y') %></td>
		  </tr>
		<% end %>
		</table>

	<% else %>
		<h5>No Available Upcoming Camps</h5>
	<% end %>

</div>