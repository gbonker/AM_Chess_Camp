<div class="fields">
  <div class="min_user">
    <%= f.input :instructor_id, as: :hidden, input_html: { value: @instructor.id } %>
    <%= f.input :username %>

    <%= f.input :password %>
    <%= f.input :password_confirmation, label: "Confirm Password" %>

    <% if logged_in? && current_user.role == "admin" %>
    	<%= f.input :role, :collection => User::ROLES, prompt: "Select Role..." %>
    <% end %>
    <%= f.input :active %>
  </div>
</div>