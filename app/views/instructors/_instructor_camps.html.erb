<% unless @upcoming_camps.empty? %>
  <!-- <h3>&nbsp;</h3> -->
  <div class="panel clearfix">
    <h5>Upcoming Camps with This Instructor</h5>
    <ul class="side-nav">
      <% @upcoming_camps.each do |camp| %>
        <li><%= link_to "#{camp.start_date.strftime('%m/%d/%y')}: #{camp.name} at #{camp.location.name}", camp_path(camp) %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% unless @past_camps.empty? %>
  <div class="panel clearfix" id="past">
    <h5>Past Camps with This Instructor</h5>
    <ul class="side-nav">
      <% @past_camps.each do |camp| %>
        <li><%= link_to "#{camp.start_date.strftime('%m/%d/%y')}: #{camp.name} at #{camp.location.name}", camp_path(camp) %></li>
      <% end %>
    </ul>
  </div>
<% end %>