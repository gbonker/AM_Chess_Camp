<%= simple_form_for(@instructor, html: { class: 'form-horizontal' }) do |f| %>
   
   <h3><%= controller.action_name.capitalize %> Instructor</h3>
    
    <%= f.input :first_name, label: "First Name" %>
    <%= f.input :last_name, label: "Last Name" %>
    <%= f.input :phone, as: :string %>
    <%= f.input :email %>
    <%= f.input :bio, label: "Biography", input_html: { rows: 6 } %>
    <%= f.input :active %>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to List of Instructors', instructors_path, :class => 'button secondary radius' %>
    </div>

<% end %>
